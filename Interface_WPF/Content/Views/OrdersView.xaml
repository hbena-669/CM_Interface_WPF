<UserControl x:Class="Interface_WPF.Content.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Pour le titre -->
            <RowDefinition Height="*"/>
            <!-- Pour le DataGrid -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock  x:Name="Title"  FontSize="24" HorizontalAlignment="Left" FontWeight="Bold" 
                    Grid.Row="0" Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Margin="10 10 0 0"/>
        
        <!-- Liste des commandes -->
        <DataGrid ItemsSource="{Binding Orders}" 
                  SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                  materialDesign:DataGridAssist.CellPadding="8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="12"
                  materialDesign:DataGridAssist.SelectedCellBorderBrush="{DynamicResource MaterialDesignShadowBrush}"
                  IsReadOnly="True"
                  Background="White"
                  Margin="10 5 0 0"
                  AutoGenerateColumns="False"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  Grid.Row="1" Grid.Column="0">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF3F51B5"/>
                    <!-- Couleur d'en-tête -->
                    <Setter Property="Foreground" Value="White"/>
                    <!-- Texte -->
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={} {0:dd/MM/yyyy}}" Width="*" />
                <!--<DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="*" />-->
                <DataGridTemplateColumn Header="Statut" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0">
                                <Rectangle Width="12" Height="12" RadiusX="2" RadiusY="2" Margin="0 0 5 0">
                                    <Rectangle.Fill>
                                        <MultiBinding Converter="{StaticResource StatusToBrushConverter}">
                                            <Binding Path="Status"/>
                                        </MultiBinding>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Détails -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="10">
            <StackPanel>
                <Grid  Margin="20 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ligne 1 : Client -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Client " FontWeight="Bold" Margin="0 0 10 5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                                Text="{Binding SelectedOrder.ClientFirstName}" Margin="0 0 5 5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                                Text="{Binding SelectedOrder.ClientLastName}" 
                            Margin="40 0 0 5" />
                    <!-- Décalage si tu veux prénom + nom -->

                    <!-- Ligne 2 : Date -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Date " FontWeight="Bold" Margin="0 0 10 5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                                Text="{Binding SelectedOrder.Date, StringFormat={}{0:dd/MM/yyyy}}"
                                 Margin="0 0 0 5"/>

                    <!-- Ligne 3 : Statut -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Statut " FontWeight="Bold" Margin="0 0 10 5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                                Text="{Binding SelectedOrder.Status}" Margin="0 0 0 5"/>

                    <!-- Ligne 4 : Total -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Total " FontWeight="Bold" Margin="0 0 10 0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                                Text="{Binding SelectedOrder.Total, StringFormat={}{0:C}}"/>
                </Grid>
                <DataGrid ItemsSource="{Binding SelectedOrder.Products}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="0 10 0 0"
                          Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Produit" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Quantité" Binding="{Binding Quantity}" Width="*" />
                        <DataGridTextColumn Header="Prix Unitaire" Binding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
