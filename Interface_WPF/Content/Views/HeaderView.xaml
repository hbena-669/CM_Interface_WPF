<UserControl x:Class="Interface_WPF.Content.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:Interface_WPF.Content.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightBlue">
        <StackPanel Orientation="Vertical" 
                    Height="300"  
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    >
            <Button x:Name="Home"  Margin="5 100 10 10" Background="Transparent" BorderThickness="0">
                <fa:ImageAwesome Icon="Home" 
                                 Width="40" 
                                 Height="40" 
                                 Foreground="Black" 
                                 AutomationProperties.Name="Home"
                                 ToolTip="Orders"
                                 />
            </Button>

            <Button x:Name="Settings"  Margin="10" Background="Transparent" BorderThickness="0" >
                <fa:ImageAwesome Icon="Database" 
                                 Width="40" 
                                 Height="40" 
                                 Foreground="Black" 
                                 AutomationProperties.Name="Setting"
                                 ToolTip="Setting" />
            </Button>

            <Button x:Name="Orders"  Margin="10" Background="Transparent" BorderThickness="0" >
                <fa:ImageAwesome Icon="List" 
                     Width="40" 
                     Height="40" 
                     Foreground="Black" 
                     AutomationProperties.Name="Setting"
                     ToolTip="Orders" 
                      />
            </Button>
        </StackPanel>
            
    </Grid>
</UserControl>
